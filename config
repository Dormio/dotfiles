exec_always /usr/bin/vmware-user-suid-wrapper # This runs VMware tools for me
exec_always feh --bg-center /home/akellermann/Pictures/japan.png
exec compton -f --fade-delta 4 # This is the compositor, gives us nice fade effects

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

  for_window [class="Pavucontrol"] floating enable

       # Widow Colours
       #                         border  background text    indicator
         client.focused          $red 	 $purple      $red    $red
	 client.focused_inactive $red 	 $bg     $blue $red
	 client.unfocused        $red 	 $bg        $red $red
         client.urgent           $red 	 $aqua      $red $red

bar {
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
        tray_output primary
	position top
	colors {
		background $bg1
                statusline $fg0

                    # color_class      border  backg.  text
                    focused_workspace  $dpurple  $purple $fg
                    active_workspace   $dpurple  #aeb2c3 $fg
                    inactive_workspace $bg1   $bg2 $fg
                    urgent_workspace   #2f343a #aeb2c3 $fg
	}
}
